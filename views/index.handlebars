{{!--title--}}
<div class="container">
<h1>Eat-Da-Burgers!</h1>

<h2>Add a burger to eat later...</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
    <button type="submit">Add Burger</button>
  </div>
</form>
</div>

<h2>Burgers Waiting to be Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <li>
      {{burger_name}}
      <button class="change-devour" data-id="{{id}}"> Eat!</button>
    </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li>
      {{burger_name}}
    </li>
    {{/if}}
  {{/each}}
</ul>

